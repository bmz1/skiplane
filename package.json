{
  "name": "skiplane",
  "version": "1.0.2",
  "description": "Lightweight PostgreSQL-backed job queue for Node.js using SKIP LOCKED.",
  "type": "module",
  "exports": "./dist/index.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22.12"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "npx @biomejs/biome lint .",
    "fmt": "npx @biomejs/biome format .",
    "fmt:write": "npx @biomejs/biome format . --write",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage",
    "dev": "vitest --watch",
    "prepare": "npm run build",
    "example:basic": "tsx examples/basic/index.ts"
  },
  "keywords": [
    "job",
    "queue",
    "postgres",
    "skip locked",
    "worker"
  ],
  "author": "bmz1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bmz1/skiplane.git"
  },
  "bugs": {
    "url": "https://github.com/bmz1/skiplane/issues"
  },
  "homepage": "https://github.com/bmz1/skiplane#readme",
  "dependencies": {
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^20.19.17",
    "@types/pg": "^8.15.5",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.16.2",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
